<%-include('includes/head') %>
<%-include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center"> Cadastrar contato</h1>
            <p class="text-center ">Crie ou edite seu contato abaixo!</p>

            <%- include("includes/messages") %> 

              <% if (contato._id) { %>
                <form class="form-cadastro-contato" action="/contato/edit/<%= contato._id %>" method="POST">
                  <% }else {%>
                  
                    <form class="form-cadastro-contato" action="/contato/register" method="POST">
                  
                      <% } %>    
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="mb-3">
                      <label  class="form-label ">Nome</label>
                      <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                    </div>

                    <div class="mb-3">
                        <label  class="form-label ">Sobrenome</label>
                        <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                      </div>
                    
                      
                      <div class="mb-3">
                        <label  class="form-label ">Email</label>
                        <input value="<%= contato.email %>" type="email" class="form-control validaEmail" name="email">
                      </div>
                    
                      
                      <div class="mb-3">
                        <label  class="form-label">Telefone</label>
                        <input value="<%= contato.telefone %>" type="tel" class="form-control valida" name="telefone">
                      </div>
                      
                  
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    
                  </form>
                  <a href="/login/index" >Ir Para Agenda</a>
         </div>
    </div>
</div>

<%-include('includes/footer') %>
